generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int      @id @default(autoincrement())
  nombre      String
  descripcion String?
  precio      Float
  imagen      String
  categoria   String
  subcategoria String
  stock       Int      @default(0)
  oferta      Boolean  @default(false)
  nuevo       Boolean  @default(true)
  mas_vendido Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  cartItems   CartItem[]
  
  @@map("products")
}

model Cart {
  id        Int       @id @default(autoincrement())
  items     CartItem[]
  sessionId String    @unique
  createdAt DateTime  @default(now())
  
  @@map("carts")
}

model CartItem {
  id        Int     @id @default(autoincrement())
  cart      Cart    @relation(fields: [cartId], onDelete: Cascade, references: [id])
  cartId    Int
  product   Product @relation(fields: [productId], onDelete: Cascade, references: [id])
  productId Int
  quantity  Int     @default(1)
  
  @@unique([cartId, productId])
  @@map("cart_items")
}

model VoiceOrder {
  id            Int      @id @default(autoincrement())
  transcription String
  total         Float?
  phone         String
  status        String   @default("PENDIENTE")
  createdAt     DateTime @default(now())
  
  @@map("voice_orders")
}
